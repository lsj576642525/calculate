/**app.wxss**/
page{
  min-height:100%;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.result {
  display: flex;
  flex-direction: column;
  height: 40%;
  width: 100%;
  font-size: 60rpx;
  background-color: whitesmoke;
}
.resultData{
  margin: 20rpx
}

.input {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
  height: 60%;
  width: 100%;
}

.item {
  width: 25%;
  height: 20%;
  display: inline-block;
  text-align: center;
  line-height: 4rem;
  font-size: 50rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee
}